<div class="container px-6 mx-auto grid">
  <!-- Header -->
  <div class="grid gap-6 mb-8">
    <div class="mt-4 flex items-start p-4 bg-white rounded-lg shadow-xs dark:bg-gray-800">
      <div>
        <h2 class="text-4xl font-semibold text-gray-600 dark:text-gray-300">Players</h2>
      </div>
    </div>

    <!-- Show Settings -->
    <div class="p-6 bg-white rounded-lg shadow-xs dark:bg-gray-800">
      <div class="mb-4">
        <h4 class="text-2xl font-semibold text-gray-600 dark:text-gray-300">Show</h4>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
        <div>
          <label class="flex items-center space-x-2">
            <input type="checkbox" id="settingOnOff" class="h-5 w-5 text-indigo-600 border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
            <span class="dark:text-white ml-4">ON/OFF</span>
          </label>
        </div>
        <div>
          <label class="flex items-center space-x-2">
            <input type="checkbox" id="settingNickname" class="h-5 w-5 text-indigo-600 border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
            <span class="dark:text-white ml-4">Nickname</span>
          </label>
        </div>
        <div>
          <label class="flex items-center space-x-2">
            <input type="checkbox" id="settingHealth" class="h-5 w-5 text-indigo-600 border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
            <span class="dark:text-white ml-4">Health</span>
          </label>
        </div>
        <div>
          <label class="flex items-center space-x-2">
            <input type="checkbox" id="settingMounted" class="h-5 w-5 text-indigo-600 border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
            <span class="dark:text-white ml-4">Mounted</span>
            <span class="relative group">
              <svg class="w-4 h-4 ml-2 text-gray-600 dark:text-gray-300 cursor-pointer" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4m0 4h.01"></path>
                <circle cx="12" cy="12" r="10"></circle>
              </svg>
              <span class="absolute top-1/2 left-full ml-2 transform -translate-y-1/2 bg-gray-800 text-white text-xs rounded p-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 whitespace-nowrap pointer-events-none">
                Shows a green circle if the player is mounted and a red circle if the player is unmounted.
              </span>
            </span>
          </label>
        </div>
        <div>
          <label class="flex items-center space-x-2">
            <input type="checkbox" id="settingItems" class="h-5 w-5 text-indigo-600 border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
            <span class="dark:text-white ml-4">Items</span>
          </label>
        </div>
        <div>
          <label class="flex items-center space-x-2">
            <input type="checkbox" id="settingItemsDev" class="h-5 w-5 text-indigo-600 border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
            <span class="dark:text-white ml-4">Items Dev</span>
            <span class="relative group">
              <svg class="w-4 h-4 ml-2 text-gray-600 dark:text-gray-300 cursor-pointer" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4m0 4h.01"></path>
                <circle cx="12" cy="12" r="10"></circle>
              </svg>
              <span class="absolute top-1/2 left-full ml-2 transform -translate-y-1/2 bg-gray-800 text-white text-xs rounded p-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 whitespace-nowrap pointer-events-none">
                Shows the IDs of the player's items, mainly for development purposes.
              </span>
            </span>
          </label>
        </div>
        <div>
          <label class="flex items-center space-x-2">
            <input type="checkbox" id="settingSpells" class="h-5 w-5 text-indigo-600 border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
            <span class="dark:text-white ml-4">Spells</span>
          </label>
        </div>
        <div>
          <label class="flex items-center space-x-2">
            <input type="checkbox" id="settingSpellsDev" class="h-5 w-5 text-indigo-600 border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
            <span class="dark:text-white ml-4">Spells Dev</span>
            <span class="relative group">
              <svg class="w-4 h-4 ml-2 text-gray-600 dark:text-gray-300 cursor-pointer" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4m0 4h.01"></path>
                <circle cx="12" cy="12" r="10"></circle>
              </svg>
              <span class="absolute top-1/2 left-full ml-2 transform -translate-y-1/2 bg-gray-800 text-white text-xs rounded p-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300 whitespace-nowrap pointer-events-none">
                Shows the IDs of the player's spells, mainly for development purposes.
              </span>
            </span>
          </label>
        </div>
        <div>
          <label class="flex items-center space-x-2">
            <input type="checkbox" id="settingDistance" class="h-5 w-5 text-indigo-600 border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
            <span class="dark:text-white ml-4">Distance</span>
          </label>
        </div>
        <div>
          <label class="flex items-center space-x-2">
            <input type="checkbox" id="settingGuild" class="h-5 w-5 text-indigo-600 border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
            <span class="dark:text-white ml-4">Guild</span>
          </label>
        </div>
        <div>
          <label class="flex items-center space-x-2">
            <input type="checkbox" id="settingSound" class="h-5 w-5 text-indigo-600 border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
            <span class="dark:text-white ml-4">Sound</span>
          </label>
        </div>
      </div>
    </div>

    <!-- Filtered Players Drawing -->
    <div class="p-6 bg-white rounded-lg shadow-xs dark:bg-gray-800">
      <div class="mb-4">
        <h4 class="text-2xl font-semibold text-gray-600 dark:text-gray-300">Filtered Players Drawing</h4>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
        <div>
          <label class="flex items-center space-x-2">
            <input type="checkbox" id="settingDrawFilteredPlayers" class="h-5 w-5 text-indigo-600 border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
            <span class="dark:text-white ml-4">Show Filtered Players</span>
            <img src="images/Flags/player.png" alt="Cyan Smiley Face" class="ml-2 h-6 w-6">
          </label>
        </div>
        <div>
          <label class="flex items-center space-x-2">
            <input type="checkbox" id="settingDrawFilteredGuilds" class="h-5 w-5 text-indigo-600 border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
            <span class="dark:text-white ml-4">Show Filtered Guild Players</span>
            <img src="images/Flags/guild.png" alt="Green Smiley Face" class="ml-2 h-6 w-6">
          </label>
        </div>
        <div>
          <label class="flex items-center space-x-2">
            <input type="checkbox" id="settingDrawFilteredAlliances" class="h-5 w-5 text-indigo-600 border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500">
            <span class="dark:text-white ml-4">Show Filtered Alliance Players</span>
            <img src="images/Flags/alliance.png" alt="Purple Smiley Face" class="ml-2 h-6 w-6">
          </label>
        </div>
      </div>
    </div>
  </div>
</div>


<script>
  function returnLocalBool(item) {
    return localStorage.getItem(item) == "true";
  }

  let settingOnOff = document.getElementById("settingOnOff");
  let settingNickname = document.getElementById("settingNickname");
  let settingHealth = document.getElementById("settingHealth");
  let settingMounted = document.getElementById("settingMounted");
  let settingItems = document.getElementById("settingItems");
  let settingItemsDev = document.getElementById("settingItemsDev");
  let settingSpells = document.getElementById("settingSpells");
  let settingSpellsDev = document.getElementById("settingSpellsDev");
  let settingDistance = document.getElementById("settingDistance");
  let settingGuild = document.getElementById("settingGuild");
  let settingSound = document.getElementById("settingSound");
  let settingDrawFilteredPlayers = document.getElementById("settingDrawFilteredPlayers");
  let settingDrawFilteredGuilds = document.getElementById("settingDrawFilteredGuilds");
  let settingDrawFilteredAlliances = document.getElementById("settingDrawFilteredAlliances");

  settingOnOff.checked = returnLocalBool("settingOnOff");
  settingNickname.checked = returnLocalBool("settingNickname");
  settingHealth.checked = returnLocalBool("settingHealth");
  settingMounted.checked = returnLocalBool("settingMounted");
  settingItems.checked = returnLocalBool("settingItems");
  settingItemsDev.checked = returnLocalBool("settingItemsDev");
  settingSpells.checked =returnLocalBool("settingSpells");
  settingSpellsDev.checked = returnLocalBool("settingSpellsDev");
  settingDistance.checked = returnLocalBool("settingDistance");
  settingGuild.checked = returnLocalBool("settingGuild");
  settingSound.checked = returnLocalBool("settingSound");
  settingDrawFilteredPlayers.checked = returnLocalBool("settingDrawFilteredPlayers");
  settingDrawFilteredGuilds.checked = returnLocalBool("settingDrawFilteredGuilds");
  settingDrawFilteredAlliances.checked = returnLocalBool("settingDrawFilteredAlliances");


  settingDrawFilteredPlayers.addEventListener("click", () => {
    localStorage.setItem("settingDrawFilteredPlayers", settingDrawFilteredPlayers.checked);
  });
  settingDrawFilteredGuilds.addEventListener("click", () => {
    localStorage.setItem("settingDrawFilteredGuilds", settingDrawFilteredGuilds.checked);
  });
  settingDrawFilteredAlliances.addEventListener("click", () => {
    localStorage.setItem("settingDrawFilteredAlliances", settingDrawFilteredAlliances.checked);
  });


  settingOnOff.addEventListener("click", () => {
    localStorage.setItem("settingOnOff", settingOnOff.checked);
  });

  settingNickname.addEventListener("click", () => {
    localStorage.setItem("settingNickname", settingNickname.checked);
  });

  settingHealth.addEventListener("click", () => {
    localStorage.setItem("settingHealth", settingHealth.checked);
  });

  settingMounted.addEventListener("click", () => {
    localStorage.setItem("settingMounted", settingMounted.checked);
  });

  settingItems.addEventListener("click", () => {
    localStorage.setItem("settingItems", settingItems.checked);
  });

  settingItemsDev.addEventListener("click", () => {
    localStorage.setItem("settingItemsDev", settingItemsDev.checked);
  });

  settingDistance.addEventListener("click", () => {
    localStorage.setItem("settingDistance", settingDistance.checked);
  });

  settingGuild.addEventListener("click", () => {
    localStorage.setItem("settingGuild", settingGuild.checked);
  });

  settingSound.addEventListener("click", () => {
    localStorage.setItem("settingSound", settingSound.checked);
  });
  settingSpells.addEventListener("click", () => {
    localStorage.setItem("settingSpells", settingSpells.checked);
  });

  settingSpellsDev.addEventListener("click", () => {
    localStorage.setItem("settingSpellsDev", settingSpellsDev.checked);
  });

</script>

